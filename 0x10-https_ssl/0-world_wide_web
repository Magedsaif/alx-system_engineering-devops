#!/usr/bin/env bash
# Configure your domain zone so that the subdomain www points
# to your load-balancer IP (lb-01).
# Letâ€™s also add other subdomains to make our life easier,
# and write a Bash script that will display information about subdomains

print_information () {
    dig "$1" | grep -A1 'ANSWER SECTION:' | sed -r "s/$1./$2/g" | awk -F" " ' NR==2 { print "The subdomain " $1 " is a " $4 " record and points to " $5 }'
}

if [ "$#" -eq 2 ]
then
    print_info "$2.$1" "$2"
else
    print_info "www.$1" "www"
    print_info "lb-01.$1" "lb-01"
    print_info "web-01.$1" "web-01"
    print_info "web-02.$1" "web-02"
fi